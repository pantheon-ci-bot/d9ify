{
    "name": "stovak/d9ify",
    "description": "The amazing d9-ification machine",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Stovall",
            "email": "tom.stovall@pantheon.io"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "D9ify\\" : "src/D9ify"
        }
    },
    "require": {
		"php": ">=8.0.0",
        "symfony/console": "^3.3",
        "composer/composer": "^2",
        "rogervila/array-diff-multidimensional": "dev-master",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^4",
        "composer/semver": "^3",
        "symfony/serializer": "^5",
        "justinrainbow/json-schema": "^5"
    },
	"require-dev": {
		"psy/psysh": "@stable"
	},
	"suggest": {
		"ext-zip": "Enabling the zip extension allows you to unzip archives",
		"ext-zlib": "Allow gzip compression of HTTP requests"
	},
    "scripts": {
        "d9ify": [
            "\\D9ify\\Application::process"
        ],
        "test": [
			"@test:unit",
			"@test:functional"
		],
		"test:functional": [
			"vendor/bin/phpunit --testsuite functional"
		],
		"test:unit": [
			"vendor/bin/phpunit  --testsuite unit"
		],
        "code:fix": [
            "phpcbf -q --standard=psr2 src"
        ],
        "code:lint": [
            "vendor/bin/phpcs --standard=psr2 src"
        ],
		"pre-commit": [
			"composer update",
			"@code:fix",
			"@code:lint",
			"@test"
		]
    },
	"config": {
		"platform": {
			"php": "8.0.0"
		},
		"platform-check": false
	}
}
