{
    "name": "stovak/d9ify",
    "description": "The amazing d9-ification machine",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Stovall",
            "email": "tom.stovall@pantheon.io"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "D9ify\\" : "src/D9ify",
			"D9ify\\Commands\\" : "src/D9ify/Commands",
			"D9ify\\Composer\\" : "src/D9ify/Composer",
			"D9ify\\Exceptions\\" : "src/D9ify/Exceptions",
			"D9ify\\Site\\": "src/D9ify/Site",
			"D9ify\\Utility\\": "src/D9ify/Utility"
		}
    },
    "require": {
		"php": ">=7.4.0",
		"ext-json": "*",
		"symfony/console": "^4",
        "composer/composer": "^2",
        "rogervila/array-diff-multidimensional": "^2",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^4",
        "composer/semver": "^3",
        "symfony/serializer": "^5",
        "justinrainbow/json-schema": "^5",
		"psy/psysh": "^v0.10.8",
        "tm/tooly-composer-script": "^1.4",
        "symfony/yaml": "^5"
    },
	"suggest": {
		"ext-zip": "Enabling the zip extension allows you to unzip archives",
		"ext-zlib": "Allow gzip compression of HTTP requests",
		"ext-yaml": "Native parsing of Yaml can speed a drupal install up to 5%"
	},
    "scripts": {
        "d9ify:process": [
            "\\D9ify\\Application::process"
        ],
		"d9ify:document": [
			"\\D9ify\\Application::document"
		],
		"d9ify:commitAndPush": [
			"\\D9ify\\Application::commitAndPush"
		],
        "test": [
			"@test:unit",
			"@test:functional"
		],
		"test:functional": [
			"vendor/bin/phpunit --testsuite functional --debug"
		],
		"test:unit": [
			"vendor/bin/phpunit  --testsuite unit --debug"
		],
        "code:fix": [
            "phpcbf -q --standard=psr2 src"
        ],
        "code:lint": [
            "vendor/bin/phpcs --standard=psr2 src"
        ],
		"pre-commit": [
			"composer d9ify:document",
			"git add README.md",
			"composer validate --strict",
			"composer update -W",
			"@code:fix",
			"@code:lint",
			"@test"
		],
		"post-install-cmd": [
			"[ -z ${GITHUB_WORKFLOW} ] || bash devops/setup-precommit.sh",
			"Tooly\\ScriptHandler::installPharTools"
		],`
		"post-update-cmd": [
			"[ -z ${GITHUB_WORKFLOW} ] || bash devops/setup-precommit.sh",
			"Tooly\\ScriptHandler::installPharTools"
		],
		"post-in",
    },
	"extra": {
		"tools": {
			"robo": {
				"url": "https://robo.li/robo.phar"
			},
			"terminus": {
				"url": "https://github.com/pantheon-systems/terminus/releases/latest/download/terminus.phar"
			}
		}
	},
	"config": {
		"platform": {
			"php": "7.4.0"
		},
		"platform-check": false
	}
}
