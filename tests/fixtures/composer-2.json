                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        "monthpicker": {
            "type": "package",
            "package": {
                "name": "lucianocosta/jquery.mtz.monthpicker",
                "version": "master",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/lucianocosta/jquery.mtz.monthpicker.git",
                    "type": "git",
                    "reference":"master"
                }
            }
        },
        "google-youtube": {
            "type": "package",
            "package": {
                "name": "google-web-components/google-youtube",
                "version": "master",
                "type": "drupal-library",
                "source": {
                    "url": "https://github.com/GoogleWebComponents/google-youtube.git",
                    "type": "git",
                    "reference":"master"
                }
            }
        }
    },
